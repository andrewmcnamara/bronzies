.playground
	.question
		min-height 200px
		text-align center
		display flex
		justify-content center
		align-items center

	.answers
		list-style none
		margin 0 0 20px 0
		padding 0

		.answer
			display block
			width 100%
			background #fff
			appearance none
			border 1px #b5b5b5 solid
			border-right none
			border-left none

	.next
		position fixed
		top 50%
		right 0
		padding 20px