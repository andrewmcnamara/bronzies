/***************************************************************************************************************************************************************
 *
 * Popup
 *
 **************************************************************************************************************************************************************/


.popup
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	z-index 550
	display flex
	justify-content center
	align-items center
	opacity 0
	pointer-events none
	transition opacity 0.4s ease
	&.is-visible
		pointer-events auto

	.no-flexbox &
		.popup
			position absolute
			top 50%
			margin-top -130px
			width 100%
			left 0
			right 0

	.popup-content
		z-index 2
		background-color #fff
		max-height 100%
		overflow auto
		padding 20px
		-webkit-overflow-scrolling touch
		box-shadow 0px 0px 10px -2px rgba(0, 0, 0, 0.75)

	.popup-close
		float right

	.popup-screen
		position fixed
		left 0
		right 0
		top 0
		bottom 0
		background-color rgba(255, 255, 255, 0.6);
		z-index 1
		&:hover
			cursor pointer