/***************************************************************************************************************************************************************
 *
 * Overall structure
 *
 **************************************************************************************************************************************************************/


html
body
	background #d0d9e0

main
	background url(../img/background.png) repeat-x
	background-size auto 100%
	min-height 100%

	&.main-index
		display flex
		align-items center
		justify-content center

	.main-list
		list-style none
		padding 0
		margin 0

	.main-list-item
		font-size 8vw
		text-align center
		display block
		line-height 1.5

	.btn-link
		font-size 10vw
		text-align center
		position absolute
		top 50%
		right 0
		left 0
		margin-top -0.5em
		font-weight 300
		text-decoration none